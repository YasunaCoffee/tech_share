.contents.clearfix
  .left-content
    %h4 What's New?
    - @articles.each do |article|
      .card.border-primary.mb-3{:style => "max-width: 50rem;"}
        .card-header
          = article.tag
        .card-body
          %h4.card-title
            = link_to article_path(article) do
              = article.title
  .right-content
    =render "template/sidebar"